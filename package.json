{
  "name": "jest-cucumber",
  "version": "1.0.6",
  "description": "Execute Gherkin scenarios in Jest",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bencompton/jest-cucumber.git"
  },
  "keywords": [
    "jest",
    "gherkin",
    "cucumber"
  ],
  "author": "Ben Compton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bencompton/jest-cucumber/issues"
  },
  "homepage": "https://github.com/bencompton/jest-cucumber#readme",
  "devDependencies": {
    "ts-jest": "^22.4.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.6",
    "gherkin": "^5.0.0",
    "jest": "^22.3.0"
  },
  "peerDependencies": {
    "jest": "22.x"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.steps.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }  
}